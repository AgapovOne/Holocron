platform :ios, '10.0'

target 'Holocron' do
  use_frameworks!

  # Required
  pod 'RxSwift'
  pod 'RxCocoa'
  pod 'Alamofire'
  pod 'Kingfisher'

  # Handy
  pod 'Moya/RxSwift' # Network layer

  pod 'DefaultsKit' # easiest local storage on Codable

  pod 'Reveal-SDK'

  pod 'Cartography'

  target 'HolocronTests' do
    inherit! :search_paths
  end
end
